<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainUnitLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:id="@+id/unit_detail" style="?android:attr/textAppearanceLarge" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp" tools:context=".UnitDetailFragment" />
    
    <ImageView android:id="@+id/unit_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="300dp" android:minWidth="300dp" android:src="@android:drawable/stat_sys_warning" android:contentDescription="@string/unitImage"/>
    
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attackAir" />

            <TextView
                android:id="@+id/attackAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defenseAir" />

            <TextView
                android:id="@+id/defAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attackHard" />

            <TextView
                android:id="@+id/attackHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defenseGround" />

            <TextView
                android:id="@+id/defGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attackNaval" />

            <TextView
                android:id="@+id/attackNaval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defenseClose" /> 

            <TextView
                android:id="@+id/defClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attackSoft" />

            <TextView
                android:id="@+id/attackSoft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/targetType" />

            <TextView
                android:id="@+id/targetType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </TableRow>
    </TableLayout>
   
    
    
    

   

</LinearLayout>